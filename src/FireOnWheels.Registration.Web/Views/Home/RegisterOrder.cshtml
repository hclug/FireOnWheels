@model FireOnWheels.Registration.Web.ViewModels.OrderViewModel

@{
    ViewData["Title"] = "RegisterOrder";
}

<h2>RegisterOrder</h2>

<form asp-action="RegisterOrder">
    <div class="form-horizontal">
        <h4>Enter Order</h4>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="PickupLocation.Contact">Pickup Contact</label>
                    <input asp-for="PickupLocation.Contact" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="PickupLocation.Address">Pickup Address</label>
                    <input asp-for="PickupLocation.Address" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="PickupLocation.City">Pickup City</label>
                    <input asp-for="PickupLocation.City" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="DestinationLocation.Contact">Delivery Contact</label>
                    <input asp-for="DestinationLocation.Contact" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="DestinationLocation.Address">Delivery Address</label>
                    <input asp-for="DestinationLocation.Address" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <label asp-for="DestinationLocation.City">Delivery City</label>
                    <input asp-for="DestinationLocation.City" />
                </div>
            </div>
        </div>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsFragile" />
                    <label asp-for="IsFragile"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsOversized" />
                    <label asp-for="IsOversized"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PackageWeight" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PackageWeight" class="form-control" />
                <span asp-validation-for="PackageWeight" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
